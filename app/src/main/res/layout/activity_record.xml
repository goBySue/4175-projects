<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RecordActivity">

    <Button
        android:id="@+id/addCupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/water"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/backToMenuBtn"
        app:layout_constraintEnd_toStartOf="@+id/backToMenuBtn" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Your water consumption goal is\n"
        android:textColor="@color/primary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/goalAmountTextView"
        app:layout_constraintEnd_toStartOf="@+id/goalAmountTextView"
        app:layout_constraintStart_toStartOf="@+id/goalAmountTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goalAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/montserrat"
        android:text=""
        android:textColorHighlight="@color/primary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/currentAmountTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/currentAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="468dp"
        android:fontFamily="@font/montserrat"
        android:text="Current amount: 0 ml"
        android:textColor="@color/primary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/backToMenuBtn"
        app:layout_constraintEnd_toStartOf="@+id/goalAmountTextView"
        app:layout_constraintStart_toStartOf="@+id/goalAmountTextView"
        app:layout_constraintTop_toBottomOf="@+id/goalAmountTextView" />

    <ImageButton
        android:id="@+id/backToMenuBtn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:onClick="backToMenu"
        android:text="Back to Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentAmountTextView"
        app:srcCompat="@drawable/home"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
